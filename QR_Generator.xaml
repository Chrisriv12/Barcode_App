<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barcode_App3.QR_Generator"
             Title="QR_Generator">
    <VerticalStackLayout>
        <Label 
            Text="QR Code Generator"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="Enter value fo QR code "
            FontSize="16" />
        
        <Entry 
            x:Name = " QRCodeEntry"
            Placeholder =  "Enter a value" />

        <Image 
            x:Name=" QRImage"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="300"
            HeightRequest="150"/>

        <Label 
            x:Name=" statusLabel"
            Text=""
            FontSize="14"
            TextColor="Red" />
    

        <Button
            Text="GenerateQRCode"
            Clicked="GenerateQRCode" 
            BackgroundColor="{StaticResource Primary}"
            TextColor="White"
            Margin="0,10,0,10" />

    </VerticalStackLayout>
</ContentPage>